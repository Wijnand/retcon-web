<% if @failed.size > 0 %>
  <table class="index sortable">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Server</th>
      <th>Backup Server</th>
      <th>Last change</th>
      <th>Backup result</th>
    </tr>
  </thead>
  <tbody>
  <% @failed.each do |job| %>
    <tr>
      <td><%=link_to h(job.id), job %></td>
      <td><%=link_to h(job.server), job.server %></td>
      <td><%=link_to h(job.backup_server), job.backup_server %></td>
      <td><%=h job.updated_at %></td>
      <td><%=h job.status %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
<% else %>
<p>Nothing at all! I guess all backup servers are doing quite well</p>
<% end %>