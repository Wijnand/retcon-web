<% content_for :header do %>
  Users
<% end %>

<table class="index">
  <tr>
    <th>Username</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to h(user.username), user %></td>
    <td><%= h user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %> | 
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% add_action 'Add user', new_user_path %>