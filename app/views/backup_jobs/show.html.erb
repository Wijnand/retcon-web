<% content_for :header do %>
  Backup job <%=h @backup_job.id %>
<% end %>

<p>
  <b>Backup server:</b>
  <%=link_to h(@backup_job.backup_server), @backup_job.backup_server %>
</p>

<p>
  <b>Server:</b>
  <%=link_to h(@backup_job.server), @backup_job.server %>
</p>

<p>
  <b>Status:</b>
  <%=h @backup_job.status %>
</p>

<h3>Commands and results</h3>
<table class="index commands sortable">
  <thead>
  <tr>
	<th>When</th>
	<th>Command</th>
	<th>Exit status</th>
	<th>Output</th>
	<th>Label</th>
  </tr>
  </thead>
  <tbody>
<% @backup_job.commands(:order => 'created_at ASC').each do | command | %>
  <tr>
	<td><%= command.created_at %></td>
	<td><%= h command.command %></td>
	<td><%= h command.exitstatus %></td>
	<td><%= h command.output %></th>
	<td><%= h command.label %></th>
  </tr>
  </tbody>
<% end %>
</table>