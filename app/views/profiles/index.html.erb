<% content_for :header do %>
  Profiles
<% end %>
<% content_for :search do %>
  <% form_for @search, :html => {:id => 'search'} do |f| %>
      <%= f.text_field :name_like, :autofocus => 'autofocus' %>
  <% end %>
<% end %>

<section>
<h3>Profiles overview</h3>
<div id="listing">
  <%= render :partial => 'listing' %>
</div>
</section>

<% add_action 'Add', new_profile_path if can?(:manage, Profile) %>