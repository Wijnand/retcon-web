<% semantic_form_for @user do |f| %>  
    <%= f.error_messages %>  
    <%= f.inputs :username %>  
    <%= f.inputs :email %>  
    <%= f.inputs :password %>   
    <%= f.inputs :password_confirmation %>
    <%= f.inputs :roles, :as => :check_boxes, :collection => Role.all %>
    <%= f.buttons %>   
<% end %>